# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map event resources
GET         /events                         web.controller.event.ListEventController.view

GET         /events/:id                     web.controller.event.DetailEventController.view(id)


# Map artist resources
GET         /artists                        web.controller.artist.ListArtistController.view

GET         /artists/genre/:genreId         web.controller.artist.ListArtistByGenreController.view(genreId: Int)

GET         /artists/:id                    web.controller.artist.DetailArtistController.view(id)


# Map common resources
GET         /faq                            web.controller.common.FAQController.view

GET         /about                          web.controller.common.AboutController.view


# Home page
GET         /                               web.controller.auth.ApplicationController.index

GET         /signOut                        web.controller.auth.ApplicationController.signOut

GET         /authenticate/:provider         web.controller.auth.SocialAuthController.authenticate(provider)

GET         /signUp                         web.controller.auth.SignUpController.view

POST        /signUp                         web.controller.auth.SignUpController.submit

GET         /signIn                         web.controller.auth.SignInController.view

POST        /signIn                         web.controller.auth.SignInController.submit

GET         /password/forgot                web.controller.auth.ForgotPasswordController.view

POST        /password/forgot                web.controller.auth.ForgotPasswordController.submit

GET         /password/reset/:token          web.controller.auth.ResetPasswordController.view(token: java.util.UUID)

POST        /password/reset/:token          web.controller.auth.ResetPasswordController.submit(token: java.util.UUID)

GET         /password/change                web.controller.auth.ChangePasswordController.view

POST        /password/change                web.controller.auth.ChangePasswordController.submit

GET         /account/email/:email           web.controller.auth.ActivateAccountController.send(email: String)

GET         /account/activate/:token        web.controller.auth.ActivateAccountController.activate(token: java.util.UUID)


# Management page
GET         /manage/events                  web.controller.manage.EventListController.view(page: Int ?= 1)

GET         /manage/events/create           web.controller.manage.CreateEventController.view

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.versioned(file)

->          /webjars                        webjars.Routes
